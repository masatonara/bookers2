
<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th><%= link_to user.followings.count, user_followings_path(user) %></th>
    </tr>
      <th>followers</th>
      <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tbody>
</table>

<div class="row">
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー", user_relationships_path(user.id), method: :delete, class: 'btn btn-success' %>
    <% else %>
      <%= link_to "フォロー解除", user_relationships_path(user.id), method: :post, class: 'btn btn-info' %>
    <% end %>
  <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
    <% end %>
  <% end %>
</div>


