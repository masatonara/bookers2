
<div class="container px-05 px-am-0">
  <div class="row">
    <div class="col-12">
     <h2>Follow Users</h2>
    </div>
    <div class="col-12">
      <% if @users.exists? %>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td>フォロー数:<%= user.followings.count %></td>
              <td>フォロワー数:<%= user.followers.count %></td>
              <td><%= link_to "Show", user_path(user)  %></td>
            </tr>
            <% end %>
            </tbody>
          <% else %>
        </table>
    </div>
      <h2 class="col-12">
        ユーザーがいません
      </h2>
    </div>
    <% end %>
  </div>
</div>