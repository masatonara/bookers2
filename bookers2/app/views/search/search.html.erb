<div class = "container px-5 px-sm-0">
  <div class= "row">
    <% if @model == "user" %>
    <h2>Users search for '<%= @value %>'</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>Name</th>
          <th>Introduction</th>
        </tr>
      </thead>
    <% @datas.each do |user| %>
      <tbody>
        <tr>
          <th>
            <%= attachment_image_tag(user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40Ã—40') %>
          </th>
          <th>
            <%= user.name %>
          </th>
          <th>
            <%= user.introduction %>
          </th>
        </tr>
      </tbody>
    </table>
    <% end %>
    <% elsif @model == "book" %>
      <h2>Books search for '<%= @value %>'</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @datas.each do |book| %>
        <tbody>
          <tr>
            <th>
              <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
            </th>
            <th>
              <%= book.title %>
            </th>
            <th>
              <%= book.body %>
            </th>
          </tr>
        </tbody>
        <% end %>
      <% end %>
      </table>
  </div>
</div>